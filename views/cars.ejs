<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>购物车</title>
    <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.bootcss.com/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <script src="/javascripts/cars.js"></script>
    <script src="/javascripts/islogin.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/cars.css">
    <link href="/stylesheets/bootstrap.min.css" type="text/css" rel="stylesheet">
</head>
<body>

<div class="container">
    <header id="header" class="clearfix">
        <div class="logo btn btn-default">
            钻石小鸟
        </div>
        <div class="islogin hidden">
            <a href="" class="btn btn-default">欢迎 <span class="user"></span> 回来！</a>
            <a href="" class="btn btn-warning aexit">退出</a>
        </div>
        <div class="lr">
            <a class="btn btn-primary" href="/users/login">登录</a>
            <a class="btn btn-primary" href="/users/register">注册</a>
        </div>
    </header><!-- /header -->
    <p class="text-right">
        <a href="/list" class="btn btn-info">商品列表</a>
        <a href="/" class="btn btn-info">返回首页</a>
    </p>
    <div class="row good-row">

        <% if(goods != "nologin" && goods != "empty"){ %>
            <ul class="list-group goods-box clearfix">
                <% goods.forEach(function(good,i){ %>
                    <li class="good-item list-group-item clearfix">
                        <div class="info-box">
                            <img src="<%= good.goodimg %>" alt="<%= good.goodname %>" title="<%= good.description %>">
                            <div class="good-info">
                                <h4><%= good.goodname %></h4>
                                <p>单价：￥<span class="good-price"><%= good.goodprice %></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;总价：￥<span class="good-money"><%= good.goodprice*good.goodnum %></span></p>
                            </div>
                        </div>
                        <input type="checkbox" data-id="<%= good.goodid %>" class="checkbox">
                        <div class="btn-box">
                            <button data-id="<%= good.goodid %>" class="btn btn-info red-btn">-</button>
                            <button class="btn btn-default good-num"><%= good.goodnum %></button>
                            <button data-id="<%= good.goodid %>" class="btn btn-info add-btn">+</button>
                        </div>
                        <button class="btn delet-btn" data-id="<%= good.goodid %>">删除商品</button>
                    </li>
                <% }) %>
                <p class="pull-left all"> 总数量：<span class="all-num">0</span>件
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    总价：￥<span class="all-money">0</span>
                </p>
                <button type="" class="btn btn-success pull-right pay-btn">去支付</button>
                <button type="" class="btn btn-danger pull-right clear-btn">清空购物车</button>
                <button type="" class="btn btn-warning pull-right remove-btn">删除选中商品</button>
            </ul>
        <% } %>
    </div>

</div>

</body>
</html>